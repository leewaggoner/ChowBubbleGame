<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gameover_layer"/>
    <ImageView android:id="@+id/button_over_sound"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sound_on"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:orientation="vertical">
        <TextView android:id="@+id/new_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:textSize="20sp" />
        <TextView android:id="@+id/best_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <Button android:id="@+id/button_playagain"
            android:layout_width="197dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/play_again" />
        <Button android:id="@+id/button_over_instructions"
            android:layout_width="197dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/instructions_button" />
    </LinearLayout>
</RelativeLayout>